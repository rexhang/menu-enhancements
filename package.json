{
  "name": "menu-enhancements",
  "displayName": "Menu Enhancements",
  "description": "已激活编的辑器窗口右键菜单增强",
  "author": "rexhang",
  "email": "rexhang_work@outlook.com",
  "icon": "icon.png",
  "version": "0.0.1",
  "publisher": "rexhang.inc",
  "repository": {
    "type": "git",
    "url": "https://github.com/rexhang/menu-enhancements.git"
  },
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.displayTheFileInExplorer",
        "title": "在资源管理器中显示该文件"
      },
      {
        "command": "extension.copyRelativePath",
        "title": "复制文件相对路径到剪贴板"
      },
      {
        "command": "extension.copyAbsolutePath",
        "title": "复制文件绝对路径到剪贴板"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "extension.displayTheFileInExplorer",
          "group": "navigation",
          "when": "resourceScheme == file"
        },
        {
          "command": "extension.copyRelativePath",
          "group": "navigation",
          "when": "resourceScheme == file",
          "title": "复制文件相对路径到剪贴板"
        },
        {
          "command": "extension.copyAbsolutePath",
          "group": "navigation",
          "when": "resourceScheme == file",
          "title": "复制文件绝对路径到剪贴板"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "build": "vsce package --no-yarn",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3",
    "ts-loader": "^9.4.3",
    "webpack": "^5.85.0",
    "webpack-cli": "^5.1.1",
    "@vscode/test-electron": "^2.3.2"
  }
}
